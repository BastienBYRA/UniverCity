{{#if error}}
  <div class="alert">
    {{error}}
  </div>
{{/if}}
<div class="card">
  <div class="card-content">
  {{#if formation._id}}
    <form method="POST" action="/api/formations/edit/{{formation._id}}" novalidate>
  {{else}}
    <form method="POST" action="/api/formations/add" novalidate>
  {{/if}}
      <div class="field">
        <div class="control">
          <input class="input" name="title" placeholder='title' value="{{formation.title}}">
        </div>
      </div>
      <div class="field">
        <div class="control">
          <input class="input" type="url" placeholder="img" name="img" value="{{formation.img}}">
        </div>
      </div>
      <div class="field">
        <div class="control">
          <Label>Description</Label>
          <textarea name="desc">{{formation.desc}}</textarea>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <Label>Description courte</Label>
          <textarea name="descShort">{{formation.descShort}}</textarea>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <input class="input" name="duration" placeholder='Temp de la formation' value="{{formation.duration}}">
        </div>
      </div>
      <div class="field">
        <div class="control">
          <input class="input" name="niveau" placeholder="Niveau d'Ã©tude" value="{{formation.niveau}}">
        </div>
      </div>
      <div class="field">
        <div class="control">
          <input class="input" type="number" name="numMaxPersons" placeholder='nombre de personnes max' value="{{formation.numMaxPersons}}">
        </div>
      </div>
      <div class="content">
        <a class="button" href="/api/Formations">
          Cancel
        </a>
        <button class="button" type="submit">
          Save
        </button>
      </div>
    </form>
  </div>
</div>
